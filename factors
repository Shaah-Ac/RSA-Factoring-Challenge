#!/usr/bin/python3

import sys
import time


def factorize(num):
    """
    Takes a number as input and returns its factorization if composite, or None if prime.

    Args:
        num: The integer to factorize.

    Returns:
        A tuple of two factors if the number is composite, or None if prime.
    """
    for i in range(2, int(num**0.5) + 1):
        if num % i == 0:
            return (i, num // i)
    return None


if __name__ == "__main__":
    """
    Reads the input file, factorizes each number, and prints the results.

    Usage: factors <file>
    """
    if len(sys.argv) != 2:
        print("Usage: factors <file>")
        exit()

    input_file = sys.argv[1]

    try:
        with open(input_file, "r") as f:
            lines = f.readlines()
    except FileNotFoundError:
        print("File not found:", input_file)
        exit()

    start_time = time.time()

    for line in lines:
        try:
            num = int(line.strip())
        except ValueError:
            print(f"Invalid number in line: {line.strip()}")
            continue

        factors = factorize(num)
        if factors is None:
            print(f"{num} is prime")
        else:
            print(f"{num}={factors[0]}*{factors[1]}")

        if time.time() - start_time > 5:
            print("Time limit exceeded")
            exit()
